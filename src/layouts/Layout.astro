---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal website and project blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="home-link">Home</a>
				<div class="nav-links">
					<a href="/about">About</a>
					<a href="/projects">Projects</a>
					<a href="/blog">Cool Stuff</a>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} â€¢ Built with Astro</p>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--bg-color: #0c0a13;
		--bg-secondary: #1a1625;
		--text-color: #e2d9f3;
		--text-secondary: #9d8fc1;
		--accent-color: #8b5cf6;
		--hover-color: #a78bfa;
		--border-color: #2d2640;
		--max-width: 90%;
		--min-width: 320px;
	}
	
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	
	html {
		font-family: system-ui, sans-serif;
		background: var(--bg-color);
		color: var(--text-color);
		font-size: 18px;
	}

	body {
		width: var(--max-width);
		min-width: var(--min-width);
		max-width: 1600px;
		margin: 0 auto;
		padding: 0 2rem;
		line-height: 1.6;
	}

	nav {
		padding: 1.5rem 0;
		margin-bottom: 3rem;
		border-bottom: 1px solid var(--border-color);
		width: 100%;
	}

	.nav-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		font-size: 1.1rem;
	}

	a {
		color: var(--accent-color);
		text-decoration: none;
		transition: color 0.2s;
	}

	a:hover {
		color: var(--hover-color);
	}

	.home-link {
		font-weight: bold;
		font-size: 1.5rem;
	}

	main {
		min-height: calc(100vh - 160px);
		width: 100%;
	}

	footer {
		margin-top: 6rem;
		padding: 2rem 0;
		text-align: center;
		color: var(--text-secondary);
		border-top: 1px solid var(--border-color);
		width: 100%;
		font-size: 1.1rem;
	}

	h1 {
		font-size: 3.5rem;
		line-height: 1.1;
		margin: 2rem 0 1.5rem;
		color: var(--text-color);
	}

	h2 {
		font-size: 2rem;
		line-height: 1.2;
		margin: 2rem 0 1rem;
	}

	h3 {
		font-size: 1.5rem;
		line-height: 1.2;
		margin: 1.5rem 0 1rem;
	}

	p {
		margin-bottom: 1.2rem;
		color: var(--text-color);
		font-size: 1.1rem;
	}

	/* Button styles */
	.button {
		display: inline-block;
		padding: 1rem 2rem;
		background-color: var(--accent-color);
		color: var(--text-color);
		border-radius: 0.5rem;
		font-weight: 500;
		font-size: 1.1rem;
		transition: all 0.2s;
		border: none;
	}

	.button:hover {
		background-color: var(--hover-color);
		color: var(--text-color);
		transform: translateY(-2px);
	}

	.button.secondary {
		background-color: transparent;
		color: var(--text-color);
		border: 2px solid var(--accent-color);
	}

	.button.secondary:hover {
		background-color: var(--accent-color);
		color: var(--text-color);
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		html {
			font-size: 16px;
		}

		body {
			width: 100%;
			padding: 0 1rem;
		}

		h1 {
			font-size: 2.5rem;
		}
	}
</style>