---
import Layout from '../layouts/Layout.astro';

// Example gallery images - replace with your actual images
const galleryImages = [
	{
		url: '/images/winding_mechanism.png',
		alt: 'Gallery Image 1'
	},
	{
		url: '/images/bobabot.JPG',
		alt: 'Gallery Image 6'
	},
	{
		url: '/images/thermistor.JPG',
		alt: 'Gallery Image 2'
	},
	{
		url: '/images/onsemi.JPG',
		alt: 'Gallery Image 10'
	},
	{
		url: '/images/aurora.JPEG',
		alt: 'Gallery Image 3'
	},
	{
		url: '/images/stars.JPG',
		alt: 'Gallery Image 4'
	},
	{
		url: '/images/dog.JPG',
		alt: 'Gallery Image 5'
	},
	{
		url: '/images/food.JPG',
		alt: 'Gallery Image 7'
	},
	{
		url: '/images/food2.JPG',
		alt: 'Gallery Image 8'
	},
	{
		url: '/images/moon.jpg',
		alt: 'Gallery Image 9'
	},
];
---

<Layout title="Ethan Ahn - Mechatronics Engineering Student">
	<div class="hero">
		<h1>Hi, I'm Ethan Ahn!</h1>
		<p class="subtitle">A Mechatronics Engineering Student @ UWaterloo</p>
	</div>

	<section class="intro">
		<p>
			Trying to make the world a cooler place through robotics and automation.
		</p>
		<p>
			Currently trying to grow my skills in hardware, robotics, and controls theory.
			Working on teaching a humanoid robot to play soccer through classical and reinforcement learning methods @ UW Robosoccer.
		</p>
		<div class="cta-buttons">
			<a href="/projects" class="button">View My Projects</a>
			<a href="/about" class="button secondary">About Me</a>
		</div>
	</section>

	<section class="gallery">
		<div class="gallery-grid">
			{galleryImages.map(image => (
				<div class="gallery-item">
					<img src={image.url} alt={image.alt} loading="lazy" />
				</div>
			))}
		</div>
	</section>
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 4rem 0;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}

	.subtitle {
		font-size: 1.25rem;
		color: var(--accent-color);
	}

	.intro {
		max-width: 600px;
		margin: 0 auto;
		text-align: center;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
		margin-bottom: 3rem;
	}

	.button {
		display: inline-block;
		padding: 0.8rem 1.6rem;
		background-color: var(--accent-color);
		color: var(--text-color);
		border-radius: 0.25rem;
		font-weight: 500;
		transition: all 0.2s;
		border: none;
	}

	.button:hover {
		background-color: var(--hover-color);
		color: var(--text-color);
	}

	.button.secondary {
		background-color: transparent;
		color: var(--text-color);
		border: 1px solid var(--accent-color);
	}

	.button.secondary:hover {
		background-color: var(--accent-color);
		color: var(--text-color);
	}

	.gallery {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(5, 1fr);
		gap: 2rem;
		margin-bottom: 5rem;
	}

	.gallery-item {
		position: relative;
		border-radius: 1.5rem;
		overflow: hidden;
		aspect-ratio: 4/3;
		background: var(--bg-secondary);
		border: 2px solid var(--border-color);
	}

	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	@media (max-width: 1400px) {
		.gallery-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	@media (max-width: 1024px) {
		.gallery-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 768px) {
		.gallery-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
	}
</style>